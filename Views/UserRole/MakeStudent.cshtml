@model WebClassbook.Models.Student

@{
    ViewData["Title"] = "Make Student";
}

<h1>Choose class.</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MakeStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label id="Grade" asp-for="Grade" class="control-label"></label>
                <input id="Grade" asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="MakeStudent" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
