@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Edit Students";
}

<h1>Edit</h1>
<h4>Students</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a class="btn btn-light" asp-action="EditStudent" asp-route-id="@item.Id">Edit</a>
                    <form class="d-inline" asp-action="DeleteStudent" asp-route-id="@item.Id" method="post">
                        <button class="btn btn-danger" name="button" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
