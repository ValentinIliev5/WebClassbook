@model WebClassbook.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}

<h1>Edit class or/and name.</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label id="Name" asp-for="ApplicationUser.Name" class="control-label"></label>
                <input id="Name" asp-for="ApplicationUser.Name" class="form-control" />
                <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label id="Grade" asp-for="Grade" class="control-label"></label>
                <input id="Grade" asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Edit Student" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
